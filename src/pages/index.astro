---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import Header from "../components/Header.astro";
import Hero from "../components/Hero.astro";
---

<Layout title="Welcome to Astro.">
	<main>
		<Header title="AstroBuild.tips" />
		<Hero />
		<ul role="list" class="link-card-grid">
			<Card
				slug="astro-01"
				title="Hello Astro"
				time="2026-10-02"
				tags={["javascript"]}
			/>
			<Card
				slug="astro-02"
				title="Hello Astro"
				time="2026-10-02"
				tags={["javascript"]}
			/>
			<Card
				slug="astro-02"
				title="Hello Astro"
				time="2026-10-02"
				tags={["javascript"]}
			/>
		</ul>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		max-width: 60ch;
		padding: 1.5rem;
	}

	.link-card-grid {
		display: grid;
		gap: 1rem;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		padding: 0;
	}
</style>
